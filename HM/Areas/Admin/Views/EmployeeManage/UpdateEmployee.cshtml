@model DAL.Entity.Employee

@{
    ViewBag.Title = "UpdateEmployee";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Edit Employee</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="row formtype">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.EmployeeID)
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Full Name</label>
                                <input type="text" name="FullName" value="@Model.FullName" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" name="Address" value="@Model.Address" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="text" name="Phone" value="@Model.Phone" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" name="Email" value="@Model.Email" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Gender</label>
                                <div>
                                    <input type="radio" name="Gender" value="@Model.Gender">
                                    <span>Male</span>
                                </div>
                                <div>
                                    <input type="radio" name="Gender" value="@Model.Gender"/>
                                    <span>Female</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Birth Date</label>
                                <div class="cal-icon">
                                    <input type="text" name="BirthDate" class="form-control datetimepicker" value="@string.Format("{0:dd-MM-YYYY}", Model.BirthDate)">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Position</label>
                                <select class="form-control" name="PositionID">
                                    @foreach (var item in new DAL.mapPosition().LoadData())
                                    {
                                        <option value="@item.PositionID" @(item.PositionID == Model.PositionID ? "selected" : "")>@item.PositionName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary buttonedit">Save</button>
                    <a href="~/Admin/EmployeeManage/AllEmployees" class="btn btn-primary btn-danger" style="float:right; margin-right:8px; padding:10px">Cancel</a>
                </form>
            </div>
        </div>
        
    </div>
</div>
