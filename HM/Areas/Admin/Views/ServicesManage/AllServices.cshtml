@model IEnumerable<DAL.Entity.Service>

@{
    ViewBag.Title = "AllServices";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var num = 1;
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">All Services</h4>
                        <a href="~/Admin/ServicesManage/CreateServices" class="btn btn-primary float-right veiwbutton">Add Services</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <form method="post">
                    <div class="card card-table">
                        <div class="card-body booking_card">
                            <div class="table-responsive">
                                <table class="datatable table table-stripped table table-hover table-center mb-0 table-borderless">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">No</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.ServiceName)</th>
                                            <th style="text-align:right">@Html.DisplayNameFor(model => model.Price)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.ServiceType.ServiceTypeName)</th>
                                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                                            <th class="text-right">Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align:center">@(num++)</td>
                                                <td style="text-align:center">@item.ServiceName</td>
                                                <td style="text-align:right">@string.Format("{0:#,0}", item.Price)</td>
                                                <td style="text-align:center">@item.ServiceTypeID</td>
                                                <td>@item.Description</td>
                                                <td class="text-right">
                                                    <div class="dropdown dropdown-action">
                                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                            <i class="fas fa-ellipsis-v ellipse_color"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            <a class="dropdown-item" href="~/Admin/ServicesManage/UpdateServices?id=@item.ServiceID">
                                                                <i class="fas fa-pencil-alt m-r-5"></i>
                                                                Edit
                                                            </a>
                                                            <a class="dropdown-item" href="~/Admin/ServicesManage/DeleteServices?id=@item.ServiceID">
                                                                <i class="fas fa-trash-alt m-r-5"></i>
                                                                Delete
                                                            </a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div id="delete_asset" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="assets/img/sent.png" alt="" width="50" height="46">
                    <h3 class="delete_class">Are you sure want to delete this Asset?</h3>
                    <div class="m-t-20">
                        <a href="" class="btn btn-white" data-dismiss="modal">Close</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
