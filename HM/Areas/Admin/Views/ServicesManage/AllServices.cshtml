@model IEnumerable<DAL.Entity.Service>

@{
    ViewBag.Title = "AllServices";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var num = 1;
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">All Services</h4>
                        <a href="~/Admin/ServicesManage/AddServices" class="btn btn-primary float-right veiwbutton">Add Services</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <form method="post">
                    <div class="card card-table">
                        <div class="card-body booking_card">
                            <div class="table-responsive">
                                <table class="datatable table table-stripped table table-hover table-center mb-0 table-borderless">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            <th class="text-left">Service Name</th>
                                            <th class="text-right">@Html.DisplayNameFor(model => model.Price)</th>
                                            <th class="text-left">Service Type</th>
                                            <th class="text-center">Image</th>
                                            <th class="text-right">Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@(num++)</td>
                                                <td class="text-left">@item.ServiceName</td>
                                                <td class="text-right">@string.Format("{0:#,0}", item.Price)</td>
                                                <td class="text-left">@item.ServiceType.ServiceTypeName</td>
                                                <td class="text-center">
                                                    <img src="@item.Image" style="width:60px; height:60px" />
                                                </td>
                                                <td class="text-right">
                                                    <div class="dropdown dropdown-action">
                                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                            <i class="fas fa-ellipsis-v ellipse_color"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            <a class="dropdown-item" href="~/Admin/ServicesManage/UpdateServices?id=@item.ServiceID"> <i class="fas fa-pencil-alt m-r-5"></i> Edit </a>
                                                            <a class="dropdown-item" onclick="if (confirm('Do you want to delete?') == true) { location.href='~/Admin/ServicesManage/DeleteServices?id=@item.ServiceID' }"> <i class="fas fa-trash-alt m-r-5"></i>Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
