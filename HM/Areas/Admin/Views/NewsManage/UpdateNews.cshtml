@model DAL.Entity.News

@{
    ViewBag.Title = "UpdateNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Edit News</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.NewsID)
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" name="NewsTitle" class="form-control" value="@Model.NewsTitle">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Author</label>
                                <input type="text" name="Author" class="form-control" value="@Model.Author" />
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group" id="dateTimePicker">
                                <label>Publish Date</label>
                                <div class="cal-icon">
                                    <input type="text" class="form-control datetimepicker" data-target="#dateTimePicker" data-toggle="datetimepicker" name="PublishDate" value="@string.Format("{0:dd-MM-yyyy}", Model.PublishDate)" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 mb-5 ">
                            <div class="form-group mb-1">
                                <label class="display-block">News Status</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" value="true" name="IsActive" style="cursor:pointer" >
                                <label class="form-check-label" for="blog_active"> Active </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" value="false" name="IsActive" style="cursor:pointer">
                                <label class="form-check-label" for="blog_inactive" style="cursor:pointer"> Inactive </label>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Content</label>
                                <textarea name="NewsContent" id="news" rows="5" class="form-control">@Model.NewsContent</textarea>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary buttonedit ml-2">Save</button>
                    <a href="~/Admin/NewsManage/AllNews" class="btn btn-primary btn-danger" style="float:right; margin-right:6px; padding:10px">Cancel</a>
                </form>
            </div>
        </div>

    </div>
</div>

@section scripts{
    <script>
        CKEDITOR.replace("news")

        $("#dateTimePicker").datetimepicker({
            format: 'DD-MM-YYYY'
        });
    </script>
}