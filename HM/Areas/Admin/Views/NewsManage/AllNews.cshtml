@model IEnumerable<DAL.Entity.News>

@{
    ViewBag.Title = "AllNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int num = 1;
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">News</h4>
                        <a href="~/Admin/NewsManage/AddNews" class="btn btn-primary float-right veiwbutton">Add News</a>
                    </div>
                </div>
            </div>
        </div>
        <!--Start Search-->
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="row formtype">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Article Name</label>
                                <input class="form-control" type="text" value="@ViewBag.titles" name="title"/>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Author</label>
                                <input class="form-control" type="text" value="@ViewBag.author" name="author"/>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Search</label>
                                <button type="submit" class="btn btn-success btn-block mt-0 search_button"> Search </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--End Search-->
        <div class="row">
            <div class="col-sm-12">
                <div class="card card-table">
                    <div class="card-body booking_card">
                        <div class="table-responsive">
                            <table class="datatable table table-stripped table table-hover table-center mb-0">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Name</th>
                                        <th>Author</th>
                                        <th style="text-align:center">Publish Date</th>
                                        <th class="text-center">Active</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(num++)</td>
                                            <td>@item.NewsTitle</td>
                                            <td>@item.Author</td>
                                            <td style="text-align:center">@string.Format("{0:dd-MM-yyyy}", item.PublishDate)</td>
                                            <td class="text-center">
                                                <input type="checkbox" @Html.Raw(item.IsActive == true ? "checked" : "") />
                                            </td>
                                            <td class="text-center">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" href="~/Admin/NewsManage/UpdateNews?id=@item.NewsID"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
                                                        <a class="dropdown-item" onclick="if (confirm('Do you want to delete?') == true) { location.href='/Admin/News/DeleteNews?id=@item.NewsID' }" style="cursor:pointer"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
