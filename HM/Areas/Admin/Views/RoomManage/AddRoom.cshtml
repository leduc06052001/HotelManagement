@model DAL.Entity.Room

@{
    ViewBag.Title = "AddRoom";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Add Room</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form enctype="multipart/form-data" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Room Number</label>
                                <input type="number" class="form-control" name="RoomNumber" value="" />
                                @Html.ValidationMessageFor(model => model.RoomNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Room Type</label>
                                <select class="form-control" name="RoomTypeID">
                                    <option>Select</option>
                                    @foreach (var item in new DAL.mapRoomType().LoadData())
                                    {
                                        <option value="@item.RoomTypeID">@item.RoomTypeName</option>
                                    }
                                </select>
                                @Html.ValidationMessageFor(model => model.RoomTypeID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Bed</label>
                                <input class="form-control" type="number" name="Bed" value="" />
                                @Html.ValidationMessageFor(model => model.Bed, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Bath</label>
                                <input class="form-control" type="text" name="Bath" value="">
                                @Html.ValidationMessageFor(model => model.Bath, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Price</label>
                                <input class="form-control" type="number" name="Price" value="">
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-1">
                            <div class="form-group">
                                <label>Status</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="true" name="IsActive" style="cursor:pointer">
                                    <label class="form-check-label"> Active </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="false" name="IsActive" style="cursor:pointer">
                                    <label class="form-check-label" style="cursor:pointer"> Inactive </label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-1">
                            <div class="form-group">
                                <label>Status</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="true" name="Status" style="cursor:pointer">
                                    <label class="form-check-label"> Empty </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="false" name="Status" style="cursor:pointer">
                                    <label class="form-check-label" style="cursor:pointer"> Placed </label>
                                </div>
                            </div>
                        </div>

                        @*<div class="col-md-4">
            <div class="form-group">
                <label>Image Upload</label>
                <div class="custom-file mb-3">
                    <input type="file" name="fileImage">
                </div>
            </div>
        </div>*@
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Description</label>
                                <textarea class="form-control" rows="5" id="comment" name="Description"></textarea>
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary buttonedit ml-3 pl-4 pr-4">Add</button>
                    <a href="~/Admin/RoomManage/AllRoom" class="btn button-cancel pl-3 pr-3">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

