@model IEnumerable<DAL.Entity.Room>
@{
    ViewBag.Title = "AllRoom";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var roomType = new DAL.mapRoomType().LoadData();
    int num = 0;
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <div class="mt-5">
                        <h4 class="card-title float-left mt-2">All Rooms</h4>
                        <a href="~/Admin/RoomManage/AddRoom" class="btn btn-primary float-right veiwbutton">Add Room</a>
                    </div>
                </div>
            </div>
        </div>
        <!--Start Search-->
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="row formtype">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Room Number</label>
                                <input class="form-control" type="text" value="@ViewBag.roomNo" name="roomNo">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Room Type</label>
                                <select class="form-control" name="roomType">
                                    <option>@ViewBag.roomType</option>
                                    @foreach (var item in roomType)
                                    {
                                        <option value="@item.RoomTypeName">@item.RoomTypeName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Search</label>
                                <button type="submit" class="btn btn-success btn-block mt-0 search_button"> Search </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--End Search-->

        <div class="row">
            <div class="col-sm-12">
                <form method="post">
                    <div class="card card-table">
                        <div class="card-body booking_card">
                            <div class="table-responsive">
                                <table class="datatable table table-stripped table table-hover table-center mb-0 table-borderless">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">No</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.RoomNumber)</th>
                                            <th>@Html.DisplayNameFor(model => model.RoomType)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.Bed)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.Bath)</th>
                                            <th style="text-align:right">@Html.DisplayNameFor(model => model.Price)</th>
                                            <th style="text-align:center">@Html.DisplayNameFor(model => model.IsActive)</th>
                                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                                            <th class="text-right">Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td style="text-align:center">@(++num)</td>
                                                <td style="text-align:center">@item.RoomNumber</td>
                                                <td>@item.RoomType.RoomTypeName</td>
                                                <td style="text-align:center">@item.Bed</td>
                                                <td style="text-align:center">@item.Bath</td>
                                                <td style="text-align:right">@string.Format("{0:#,0}", item.Price)</td>
                                                <td style="text-align:center">
                                                    <input type="checkbox" @Html.Raw(item.IsActive == true ? "checked" : "") />
                                                </td>
                                                <td>@item.Status</td>
                                                <td class="text-right">
                                                    <div class="dropdown dropdown-action">
                                                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                            <i class="fas fa-ellipsis-v ellipse_color"></i>
                                                        </a>
                                                        <div class="dropdown-menu dropdown-menu-right">
                                                            <a class="dropdown-item" href="~/Admin/RoomManage/EditRoom?id=@item.RoomID"><i class="fas fa-pencil-alt m-r-5"></i>Edit</a>
                                                            <a class="dropdown-item" onclick="if (confirm('Do you want to delete?') == true) { location.href ='/Admin/RoomManage/DeleteRoom?id=@item.RoomID' }"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>