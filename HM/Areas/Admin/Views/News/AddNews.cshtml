@model DAL.Entity.News

@{
    ViewBag.Title = "AddNews";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content mt-5">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-2">Add Blog</h3>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-12">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="row formtype">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Title</label>
                                @Html.ValidationMessageFor(model => model.NewsTitle, "*", new { @class = "text-danger" })
                                <input type="text" name="NewsTitle" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Author</label>
                                <input type="text" name="Author" class="form-control" />
                                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Publish Date</label>
                                <input type="date" name="PublishDate" class="form-control bootstrap-datetimepicker-widget" />
                                @Html.ValidationMessageFor(model => model.PublishDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label>News Status</label>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="true" name="IsActive" style="cursor:pointer">
                                    <label class="form-check-label"> Active </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" value="false" name="IsActive" style="cursor:pointer">
                                    <label class="form-check-label" style="cursor:pointer"> Inactive </label>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-10">
                            <div class="form-group">
                                <label>Content</label>
                                <textarea name="NewsContent" id="news" class="form-control"></textarea>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary buttonedit1 mt-4">Publish Blog</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
        CKEDITOR.replace("news")
    </script>
}