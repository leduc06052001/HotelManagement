
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Hotel Dashboard</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/Areas/Admin/assets/img/favicon.png">
    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/feathericon.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/morris/morris.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet" />
</head>

<body>
	<div class="main-wrapper login-body">
		<div class="login-wrapper">
			<div class="container">
				<div class="loginbox">
					<div class="login-left"> <img class="img-fluid" src="~/Areas/Admin/assets/img/logo.png" alt="Logo"> </div>
					<div class="login-right">
						<div class="login-right-wrap">
							<h1>Đăng nhập</h1>
							<p class="account-subtitle">Access to our dashboard</p>
                            <form method="post">
                                <h8 class="text-danger">@ViewBag.error</h8>
                                <div class="form-group">
                                    <input class="form-control" type="text" name="username" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="password" name="password" placeholder="Password">
                                </div>

                                <div class="form-group">
                                    <button class="btn btn-primary btn-block" type="submit">Đăng nhập</button>
                                </div>
                            </form>
							<div class="text-center forgotpass"><a href="forgot-password.html">Bạn quên mật khẩu?</a> </div>
							<div class="login-or"> <span class="or-line"></span> <span class="span-or">hoặc</span> </div>
							<div class="social-login"> <span>Đăng nhập với</span> <a href="#" class="facebook"><i class="fab fa-facebook-f"></i></a><a href="#" class="google"><i class="fab fa-google"></i></a> </div>
							<div class="text-center dont-have">Chưa có tài khoản? <a href="~/admin/dashboard/register">Đăng ký ngay</a></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<script src="~/Areas/Admin/assets/js/jquery-3.5.1.min.js"></script>
	<script src="~/Areas/Admin/assets/js/popper.min.js"></script>
	<script src="~/Areas/Admin/assets/js/bootstrap.min.js"></script>
	<script src="~/Areas/Admin/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
	<script src="~/Areas/Admin/assets/js/script.js"></script>
</body>

</html>
