@model HM.Common.ForgotPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Hotel Dashboard Template</title>
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">
    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/feathericon.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/morris/morris.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet" />
</head>

<body>
    <div class="main-wrapper login-body login_class">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox forgot_confirm" style="width:600px">
                    <div class="forgot_center" style="text-align:center">
                        <div class="login-right-wrap mb-5 mt-5">
                            <h1 class="mb-md-5">ARTEMIS HOTEL</h1>
                            <div class="form-group mt-5">
                                Một liên kết đặt lại mật khẩu đã được gửi đến email của bạn.<br />
                                Vui lòng kiểm tra và nhấp vào liên kết trong email để đặt lại mật khẩu.

                            </div>
                            @*<div class="form-group mt-5">
                                    <button type="submit" class="btn btn-primary btn-block">Gửi</button>
                                </div>*@

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/Areas/Admin/assets/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/js/script.js"></script>
</body>

