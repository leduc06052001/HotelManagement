@model HM.Common.ResetPasswordViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Hotel Dashboard Template</title>
    <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicon.png">
    <link href="~/Areas/Admin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/feathericon.min.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/plugins/morris/morris.css" rel="stylesheet" />
    <link href="~/Areas/Admin/assets/css/style.css" rel="stylesheet" />
</head>

<body>
    <div class="main-wrapper login-body login_class">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox login_pswd">
                    <div class="login-right">
                        <div class="login-right-wrap mb-5 mt-5">
                            <h1>Đặt lại mật khẩu</h1>
                            <hr class="mb-5" />
                            @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
                            {
                                @Html.HiddenFor(model => model.ResetPasswordCode)
                                @Html.AntiForgeryToken();
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.NewPassword, new { @type="password", @class = "form-control", @placeholder = "Mật khẩu mới" })
                                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @type = "password", @class = "form-control", @placeholder = "Xác nhận mật khẩu" })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mt-3">
                                    <button type="submit" class="btn btn-primary btn-block">Thay đổi</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Areas/Admin/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/Areas/Admin/assets/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/js/script.js"></script>
</body>

</html>