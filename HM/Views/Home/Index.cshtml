@model DAL.Entity.RoomType
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.active = "Home";
    var roomType = new DAL.mapRoomType().LoadData();
}

@Html.Partial("_Slider");

<!-- Booking Start -->
<form>
    <div class="container-fluid booking pb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container">
            <div class="bg-white shadow" style="padding: 35px;">
                <div class="row g-2">
                    <div class="col-md-10">
                        <div class="row g-2">
                            <div class="col-md-4">
                                <select class="form-select">
                                    <option selected>Loại phòng</option>
                                    @foreach (var item in roomType)
                                    {
                                        <option value="@item.RoomTypeID">@item.RoomTypeName</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-4">
                                <select class="form-select">
                                    <option selected>Người lớn</option>
                                    @for (int i = 1; i < 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <select class="form-select">
                                    <option selected>Trẻ em</option>
                                    @for (int i = 1; i < 10; i++)
                                    {
                                        <option value="@i">@i</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <a href="~/Rooms/Select_Room" class="btn btn-primary w-100">Check Available</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<!-- Booking End -->
