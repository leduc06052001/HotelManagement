@model HM.Common.RegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        body {
            background-color: gainsboro;
            height: 600px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        form {
            background-color: #fff;
            width: 360px;
            height: 580px;
            display: flex;
            flex-direction: column;
            backdrop-filter: blur(5px);
            border: solid 1px #ced4da;
            border-radius: 6px;
            align-items: center;
        }

            form h5 {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-size: 30px;
                text-transform: uppercase;
            }

            form .register {
                display: flex;
                flex-direction: column;
                width: 90%;
            }

        .register input {
            border: solid 1px #ced4da;
        }
        .register input,
        button {
            margin: 10px;
            padding: 10px 15px;
            outline: none;
            border-radius: 12px;
            font-size: 16px;
        }

        form input {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: black;
            font-size: 20px;
            letter-spacing: 1px;
        }

        .register input::placeholder {
            color: rgb(128, 125, 125);
            font-size: 14px;
        }

        .register button {
            color: #fff;
            background-color: #FEA116;
            text-transform: uppercase;
            border:none;
            margin-top: 26px;
            cursor: pointer;
        }

        .have_account {
            color: #a0a0a0;
            margin-top: 16px;
        }

            .have_account a {
                color: #000;
                text-decoration: none;
                cursor: pointer;
            }
        .error-message{
            color:red;
            margin-left: 16px;
        }
    </style>
</head>

<body>

    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h5>Artemis Hotel</h5>
        <div class="register">
            @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Tên của bạn" })
            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "error-message" })

            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "error-message" })

            @Html.TextBoxFor(model => model.Password, new { @type = "password", @placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error-message" })

            @Html.TextBoxFor(model => model.ConfirmPassword, new { @type="password", @placeholder = "Nhập lại mật khẩu" })
            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "error-message" })

            <button type="submit">Đăng ký</button>
        </div>
        <div class="have_account">
            <span>Bạn đã có tài khoản?</span>
            <a href="~/Home/Login">Đăng nhập</a>
        </div>
    }
</body>

</html>
