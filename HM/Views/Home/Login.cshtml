
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <style>
        body {
            background-image: url('../../assets/img/background.jpg');
            background-size: cover;
            height: 96vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        form {
            width: 360px;
            height: 520px;
            display: flex;
            flex-direction: column;
            backdrop-filter: blur(5px);
            border: solid 1px;
            border-radius: 6px;
            align-items: center;
        }

            h5 {
                font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
                font-size: 30px;
                text-transform: uppercase;
            }

            .login {
                display: flex;
                flex-direction: column;
                width: 86%;
            }

            input,
            button {
                margin: 10px;
                padding: 10px 15px;
                border: none;
                outline: none;
                border-radius: 52px;
                font-size: 16px;
            }

            form input {
                color: black;
                font-size: 16px;
                letter-spacing: 1px;
                text-indent: 32px;
                background-image: url('../../assets/img/user.png');
                background-repeat: no-repeat;
                background-size: 26px;
                background-position: 12px;
            }

                .form input:nth-child(2) {
                    background-image: url('../../assets/img/lock.png');
                }

        .login input::placeholder {
            color: rgb(90, 90, 90);
        }

        .login button {
            color: chocolate;
            background-color: rgb(20, 78, 78);
            font-weight: bold;
            text-transform: uppercase;
            cursor: pointer;
        }

        .suggests {
            width: 85%;
            display: flex;
            justify-content: space-between;
            align-items: center;
            cursor: pointer;
        }

            .suggests .forgot a {
                color: rgb(20, 186, 236);
                text-decoration: none;
                cursor: pointer;
            }
        .register{
            margin-top: 16px;
        }
            
            .register a {
                color:blue;
                text-decoration:none;
            }
    </style>
</head>

<body>
    <form method="post">
        <h5>Login</h5>
        <div class="login">
            <input type="email" name="email" placeholder="Email">
            <input type="password" name="password" placeholder="Password">
            <button type="submit">Sign in</button>
        </div>

        <div class="suggests">
            <div class="remember">
                <input type="checkbox" checked>
                <span>Remember Me</span>
            </div>

            <div class="forgot">
                <a href="">Forgot Password</a>
            </div>
        </div>

        <div class="register">
            <span>Don't have an account?</span>
            <a href="~/Home/Register">Register</a>
        </div>
    </form>
</body>

</html>
