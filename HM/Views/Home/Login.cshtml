@model HM.Common.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="~/Assets/plugin/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Assets/plugin/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: gainsboro;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        form {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #fff;
            width: 360px;
            height: 560px;
            display: flex;
            flex-direction: column;
            box-shadow: 0 0 10px rgba(0,0,0,.1);
            border-radius: 6px;
            align-items: center;
        }

        h5 {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            color: #000;
            font-size: 30px;
            margin-top: 32px;
            margin-bottom: 22px;
            text-transform: uppercase;
        }

        .login {
            display: flex;
            flex-direction: column;
            width: 86%;
        }

        input,
        button {
            margin: 10px;
            padding: 10px 15px;
            border: none;
            outline: none;
            border-radius: 12px;
            font-size: 16px;
        }

        form input {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            height: 22px;
            color: black;
            font-size: 16px;
            border: solid 1px #ced4da;
            letter-spacing: 1px;
        }

        /*        form input:nth-child(2) {
                    background-image: url(/Assets/img/Lock.png);
                }
        */


        .login button {
            color: #fff;
            height: 42px;
            background-color: #FEA116;
            text-transform: uppercase;
            cursor: pointer;
        }

        .suggests {
            width: 80%;
            display: flex;
            justify-content: right;
            align-items: center;
            cursor: pointer;
        }

            .suggests .forgot a {
                color: darkgray;
                text-decoration: none;
                cursor: pointer;
            }

        .forgot a:hover {
            color: #000;
            text-decoration: underline;
        }

        .login-or {
            color: #a0a0a0;
            margin-top: 18px;
            padding-bottom: 10px;
            position: relative;
        }

        .or-line {
            background-color: #e5e5e5;
            height: 1px;
            margin-bottom: 0;
            margin-top: 0;
            display: block;
        }

        .span-or {
            display: block;
            left: 50%;
            margin-left: -20px;
            position: absolute;
            text-align: center;
            text-transform: uppercase;
            top: 0;
            width: 42px;
        }

        .social-login {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 16px;
            box-sizing: border-box;
        }

            .social-login a {
                background-color: #ccc;
                border-radius: 12px;
                color: #fff;
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 16px;
                height: 42px;
                line-height: 32px;
                margin: 6px;
                text-align: center;
                width: 288px;
                text-decoration: none;
            }

                .social-login a.facebook {
                    background-color: #4b75bd;
                }

                .social-login a.google {
                    background-color: #fe5240;
                }

                .social-login a .fa-facebook {
                    margin-right: 12px;
                }

                .social-login a .fa-google {
                    margin-right: 12px;
                }

        .register {
            margin-top: 16px;
        }

            .register .register-question {
                color: #a0a0a0;
            }

            .register a {
                color: #000;
                text-decoration: none;
            }

                .register a:hover {
                    text-decoration: underline;
                }

        .error-message {
            color: red;
            margin-left: 16px;
        }
    </style>
</head>

<body>

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <h5>Artemis Hotel</h5>
        <hr />
        <div class="login">
            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "error-message" })

            @Html.TextBoxFor(model => model.Password, new { @type = "password", @placeholder = "Mật khẩu" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "error-message" })

            <button type="submit">Đăng nhập</button>
        </div>

        <div class="suggests">
            <div class="forgot">
                <a href="~/Home/ForgotPassword">Quên mật khẩu?</a>
            </div>
        </div>

        <div class="login-or"> <span class="or-line"></span> <span class="span-or">hoặc</span> </div>
        <div class="social-login">
            <a href="~/Home/LoginFacebook" class="facebook"><i class="fab fa-facebook"></i> Đăng nhập với facebook</a>
        </div>

        <div class="register">
            <span class="register-question">Chưa có tài khoản?</span>
            <a href="~/Home/Register">Đăng ký</a>
        </div>
    }
</body>

</html>

