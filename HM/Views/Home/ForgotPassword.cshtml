
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link href="~/Assets/plugin/fontawesome/css/all.min.css" rel="stylesheet" />
    <link href="~/Assets/plugin/fontawesome/css/fontawesome.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: gainsboro;
            height: 600px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        form {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #fff;
            width: 460px;
            height: 360px;
            display: flex;
            flex-direction: column;
            border: solid 1px;
            border-radius: 6px;
            align-items: center;
        }

        h1 {
            font-weight:500;
            color: #000;
            font-size: 32px;
            margin-top: 32px;
            margin-bottom:2px;
        }
        p{
            font-size:18px;
            margin-bottom:22px;
        }

        .login {
            display: flex;
            flex-direction: column;
            width: 86%;
        }

        input,
        button {
            margin: 10px;
            padding: 10px 15px;
            border: none;
            outline: none;
            border-radius: 12px;
            font-size: 16px;
        }

        form input {
            height: 22px;
            color: black;
            font-size: 16px;
            border: solid 1px;
            letter-spacing: 1px;
            text-indent: 32px;
            background-image: url(/Assets/img/gmail-login.png);
            background-repeat: no-repeat;
            background-size: 26px;
            background-position: 12px;
        }

        .login button {
            color:#fff;
            height: 42px;
            background-color: #FEA116;
            font-weight: 500;
            cursor: pointer;
        }

        .forgot a:hover {
            color: #000;
            text-decoration: underline;
        }

        .register {
            margin-top: 16px;
        }

            .register .register-question {
                color: #a0a0a0;
            }

            .register a {
                color: #000;
                text-decoration: none;
            }

                .register a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <form method="post">
        <h1>Quên mật khẩu?</h1>
        <p>Nhập email của bạn để nhận liên kết đặt lại mật khẩu</p>
        <div class="login">
            <input type="email" name="email" placeholder="Email">
            <button type="submit">Đặt lại mật khẩu</button>
        </div>

        <div class="register">
            <span class="register-question">Bạn nhớ mật khẩu?</span>
            <a href="~/Home/Login">Đăng nhập</a>
        </div>
    </form>
</body>

</html>
