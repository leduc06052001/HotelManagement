@model DAL.Entity.Booking
@{
    ViewBag.Title = "BookingDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DAL.Entity.Room room = ViewBag.RoomDetail;
}

<!-- Room Detail Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Đặt phòng</h6>
            <h1 class="mb-5">Thông tin đơn đặt phòng</h1>
        </div>
        <div class="row g-5">
            <form method="post">
                <div class="col-lg-6 wow fadeInUp mx-auto" style="max-width: 600px;" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="d-flex justify-content-center">
                            <img class="img-fluid" src="~/Assets/img/room-1.jpg" alt="notset">
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex mb-3">
                                <span class="select-room fs-3 fw-bold">@Model.Room.RoomType.RoomTypeName</span>
                                <div class="ps-2">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div>
                            </div>
                            <div class="mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@Model.Room.Bed Bed</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@Model.Room.Bath Bath</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-utensils text-primary me-2"></i>Breakfast</small>
                                <small><i class="fa fa-tshirt text-primary me-2"></i>Laundry</small>
                                <hr />
                            </div>

                            <div class="d-flex justify-content-between mb-2 col-12">
                                <label class="text-center col-6">Check in</label>
                                <label class="text-center col-6">Check out</label>
                            </div>

                            <div class="d-flex justify-content-between mb-3 col-12">
                                <span class="border-end text-center col-6">@string.Format("{0:dd-MM-yyyy}", Model.CheckinDate)</span>
                                <span class="text-center col-6">@string.Format("{0:dd-MM-yyyy}", Model.CheckinDate)</span>
                            </div>

                            <hr />
                            <div class="fs-5 fw-bold mb-3" style="float:right">
                                <span>Tổng tiền: @string.Format("{0:#,0}", Model.TotalAmount)</span>
                            </div>

                            <div class="col-12 mb-3">
                                <div class="form-group">
                                    <select name="paymentMethod" class="form-select">
                                        <option>Phương thức thanh toán</option>
                                        <option value="paypal">PayPal</option>
                                        <option value="vnpay">VNPay</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-12">
                                <button class="btn btn-primary w-100 pt-2 pb-2" type="submit">Thanh toán</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Room Detail End -->
