@model IEnumerable<DAL.Entity.Booking>
@{
    ViewBag.Title = "BookingDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    DAL.Entity.Room room = ViewBag.RoomDetail;
}

<!-- Room Detail Start -->
<div class="container-xxl py-2">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Đơn đặt phòng</h6>
            <h1 class="mb-5">Lịch sử đặt phòng của bạn</h1>
        </div>
        <div class="row g-4">
            @foreach (var booking in Model)
            {
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="room-item shadow rounded overflow-hidden">
                        <div class="position-relative">
                            <img class="img-fluid" src="@booking.Room.Image" alt="image">
                            <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4" style="font-size: 16px; font-weight:bold;">@string.Format("{0:#,0}", booking.Room.Price * (decimal)0.9) / đêm</small>
                            <small class="position-absolute start-50 top-100 translate-middle-y bg-discount strikeThrough text-white rounded py-1 px-3 ms-4" style="text-decoration-color:black; font-size: 13px">
                                @string.Format("{0:#,0}", booking.Room.Price) /đêm
                            </small>
                        </div>
                        <div class="p-4 mt-2">
                            <div class="d-flex justify-content-between mb-3">
                                <a href="~/rooms/roomdetail?id=@booking.RoomID" class="select-room fs-5">@booking.Room.RoomType.RoomTypeName</a>
                                <div class="ps-2">
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                    <small class="fa fa-star text-primary"></small>
                                </div>
                            </div>
                            <div class="d-flex mb-3">
                                <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@booking.Room.Bed giường</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@booking.Room.Bath phòng tắm</small>
                                <small class="border-end me-3 pe-3"><i class="fa fa-wifi text-primary me-2"></i>Wifi</small>
                            </div>
                            <p class="text-body mb-3">@booking.Room.Description</p>
                            <div class="d-flex justify-content-between mb-2 col-12">
                                <label class="text-center col-6">Check in</label>
                                <label class="text-center col-6">Check out</label>
                            </div>

                            <div class="d-flex justify-content-between mb-3 col-12">
                                <span class="border-end text-center col-6">@string.Format("{0:dd-MM-yyyy}", booking.CheckinDate)</span>
                                <span class="text-center col-6">@string.Format("{0:dd-MM-yyyy}", booking.CheckoutDate)</span>
                            </div>

                            <hr />
                            <div class="fs-5 fw-bold mb-3" style="float:right">
                                <span>Tổng tiền: @string.Format("{0:#,0}", booking.TotalAmount)</span>
                            </div>

                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Room Detail End -->
